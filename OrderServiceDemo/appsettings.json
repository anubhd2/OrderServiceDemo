{
  "Logging": { "LogLevel": { "Default": "Information" } },

  "spring": {
    "application": {
      "name": "orderservice" // this is the application name the config server will use
    },
    "cloud": {
      "config": {
        "uri": "http://localhost:8888", // config server URL
        "enabled": true,
        "failFast": false, // true would fail startup if config server unreachable
        "pollingInterval": "00:00:00" // optional: you can configure polling here (TimeSpan)
      }
    }
  },
  "FeatureFlags": {
    "UseNewCheckout": false
  },

  "Management": {
    "Endpoints": {
      "Actuator": {
        "Exposure": {
          "Include": [ "*" ]
        }
      }
    }
  }
}
